<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="tab_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:enabled">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/tabcolor</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="normal_item">
        <item name="android:layout_height">@dimen/normal_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/content_padding_empty_height</item>
        <item name="android:paddingRight">@dimen/content_padding_empty_height</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/normal_item_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/text_draw_padding</item>
    </style>
    <style name="me_normal_item" parent="normal_item">
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
