<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AutoMatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapAuto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AutoWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--带分隔线 Auto-->
    <style name="Divider.AutoMatch.MiddleAndEnd"
           parent="MatchAuto">
        <item name="android:showDividers">middle|end</item>
        <item name="android:divider">@drawable/layout_divider</item>
    </style>
    <!--带分隔线 MatchWrap-->
    <style name="Divider.MatchWrap.MiddleAndEnd"
           parent="MatchWrap">
        <item name="android:showDividers">middle|end</item>
        <item name="android:divider">@drawable/layout_divider</item>
    </style>
    <!--带分隔线 2Match-->
    <style name="Divider.2Match.MiddleAndEnd"
           parent="MatchMatch">
        <item name="android:showDividers">middle|end</item>
        <item name="android:divider">@drawable/layout_divider</item>
    </style>
    <!--带分隔线 2Match-->
    <style name="Divider.2Match.Middle"
           parent="MatchMatch">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/layout_divider</item>
    </style>

    <style name="WrapMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
