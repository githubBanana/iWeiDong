<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danladder_img1_Id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/dangradpic1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danladder_tv1_levelName_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最强王者"
                android:textColor="@color/darkorange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/danladder_tv1_score_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14000转"
                android:textColor="#989898"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danladder_img2_Id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/dangradpic2"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danladder_tv2_levelName_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至尊钻石"
                android:textColor="@color/darkorange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/danladder_tv2_score_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000转"
                android:textColor="#989898"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danladder_img3_Id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/dangradpic3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danladder_tv3_levelName_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="荣耀黄金"
                android:textColor="@color/darkorange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/danladder_tv3_score_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9000转"
                android:textColor="#989898"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danladder_img4_Id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/dangradpic4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danladder_tv4_levelName_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不屈白银"
                android:textColor="@color/darkorange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/danladder_tv4_score_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7000转"
                android:textColor="#989898"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/danladder_img5_Id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/dangradpic5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/danladder_tv5_levelName_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英勇黄铜"
                android:textColor="@color/darkorange"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/danladder_tv5_score_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000转"
                android:textColor="#989898"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>