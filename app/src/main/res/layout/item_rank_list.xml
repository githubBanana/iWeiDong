<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="getRankModel"
            type="com.zf.weisport.model.GetRankModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        >
        <ImageView
            android:padding="10dp"
            android:id="@+id/img_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img_tubiao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="matrix"
            android:src="@mipmap/me_false"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_toEndOf="@+id/img_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_name_rankId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:layout_gravity="center_vertical"
            android:text="@{getRankModel.name}"/>
        <TextView
            android:id="@+id/item_itemName_rankId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="@{getRankModel.itemName}"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/item_speed_rankId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{getRankModel.speed}"
            android:padding="5dp"
            android:textSize="16dp"
            />
    </LinearLayout>

</LinearLayout>
</layout>