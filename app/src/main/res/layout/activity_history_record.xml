<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="historyrecordViewModel"
            type="com.zf.weisport.ui.viewmodel.HistoryRecordViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_weight="1.5">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1.2">
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/history_top_layout_hour"
                    style="@style/my_list_top_item_layout_style2" >

                    <TextView
                        android:id="@+id/history_top_tv_hour"
                        style="@style/my_list_top_item_text_style"
                        android:text="时长" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/history_top_layout_speed"
                    style="@style/my_list_top_item_layout_style2" >

                    <TextView
                        android:id="@+id/history_top_tv_speed"
                        style="@style/my_list_top_item_text_style"
                        android:text="转速" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:layout_weight="1.5">
                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/rb_week"
                        style="@style/history_record_time_item_style"
                        android:text="@string/text_week"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/rb_month"
                        style="@style/history_record_time_item_style"
                        android:text="@string/text_month"/>
                    <RadioButton
                        android:id="@+id/rb_year"
                        style="@style/history_record_time_item_style"
                        android:text="@string/text_year" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:visibility="gone"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="@{historyrecordViewModel.startTime}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="@{historyrecordViewModel.endTime}"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_toEndOf="@+id/layout_id"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFA1A5"
                android:visibility="invisible"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/text_accumulate_hours"
                android:gravity="center"
                android:padding="10dp"
                android:drawableLeft="@mipmap/pic_hourlength"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:gravity="center"
                android:text="@{historyrecordViewModel.accumulateHours}"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/text_max_speed"
                android:gravity="center"
                android:padding="10dp"
                android:drawableLeft="@mipmap/pic_hourlength"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:gravity="center"
                android:text="@{historyrecordViewModel.maxSpeed}"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</layout>